{
    "name": "functions",
    "description": "Yoda Speak on Firebase using Doppler for app config and secrets management",
    "scripts": {
        "serve": "doppler run -- firebase emulators:start --only functions",
        "shell": "doppler run -- firebase functions:shell",
        "config-env-set": "firebase functions:config:unset env && firebase functions:config:set env=\"$(doppler secrets download --config prd --no-file --format json --silent)\"",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "lint": "eslint --fix --quiet",
        "format": "prettier --write --loglevel error ."
    },
    "engines": {
        "node": "16"
    },
    "main": "index.js",
    "dependencies": {
        "axios": "^0.23.0",
        "colors": "^1.4.0",
        "cors": "^2.8.5",
        "debug": "^4.3.2",
        "express": "^4.17.1",
        "firebase-admin": "^10.0.0",
        "firebase-functions": "^3.15.7",
        "http-errors": "^1.8.0",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "eslint": "^8.0.1",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.25.2",
        "prettier": "^2.4.1"
    },
    "private": true
}
